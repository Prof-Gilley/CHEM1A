      <!-- Question 1 -->
      <item ident="q1_photon_energy" title="[OpenStax 6.1 | COR 10.1.2 | Objective 9] Photon Energy Calculation">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html"><![CDATA[<p>A sodium vapor lamp emits light at 589 nm. What is the energy of a single photon of this yellow light?</p>
<p><strong>Constants:</strong> c = 3.00 × 10⁸ m/s, h = 6.626 × 10⁻³⁴ J·s</p>]]></mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="A">
                <material><mattext>1.99 × 10⁻¹⁹ J</mattext></material>
              </response_label>
              <response_label ident="B">
                <material><mattext>3.37 × 10⁻¹⁹ J</mattext></material>
              </response_label>
              <response_label ident="C">
                <material><mattext>5.09 × 10⁻¹⁹ J</mattext></material>
              </response_label>
              <response_label ident="D">
                <material><mattext>3.37 × 10⁻²⁸ J</mattext></material>
              </response_label>
              <response_label ident="E">
                <material><mattext>1.13 × 10⁻²⁷ J</mattext></material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">B</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 2 -->
      <item ident="q2_wavelength_frequency" title="[OpenStax 6.1 | COR 10.1.1 | Objective 1] Wavelength-Frequency Relationship">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html"><![CDATA[<p>Which electromagnetic wave has a frequency of 6.00 × 10¹⁴ Hz?</p>
<p><strong>Constants:</strong> c = 3.00 × 10⁸ m/s</p>]]></mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="A">
                <material><mattext>UV (λ = 300 nm)</mattext></material>
              </response_label>
              <response_label ident="B">
                <material><mattext>Red visible (λ = 700 nm)</mattext></material>
              </response_label>
              <response_label ident="C">
                <material><mattext>Green visible (λ = 500 nm)</mattext></material>
              </response_label>
              <response_label ident="D">
                <material><mattext>Blue visible (λ = 450 nm)</mattext></material>
              </response_label>
              <response_label ident="E">
                <material><mattext>Infrared (λ = 1000 nm)</mattext></material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">C</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 3 -->
      <item ident="q3_energy_wavelength_ratio" title="[OpenStax 6.1 | COR 10.1.2 | Objective 1] Energy-Wavelength Inverse Relationship">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html"><![CDATA[<p>If photon A has wavelength λ = 400 nm and photon B has wavelength λ = 800 nm, what is the ratio of their energies (E<sub>A</sub> / E<sub>B</sub>)?</p>]]></mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="A">
                <material><mattext>0.5</mattext></material>
              </response_label>
              <response_label ident="B">
                <material><mattext>1.0</mattext></material>
              </response_label>
              <response_label ident="C">
                <material><mattext>2.0</mattext></material>
              </response_label>
              <response_label ident="D">
                <material><mattext>4.0</mattext></material>
              </response_label>
              <response_label ident="E">
                <material><mattext>0.25</mattext></material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">C</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="correct_fb"/>
          </respcondition>
        </resprocessing>
        <itemfeedback ident="correct_fb">
          <flow_mat>
            <material>
              <mattext>E is inversely proportional to λ, so doubling wavelength halves energy</mattext>
            </material>
          </flow_mat>
        </itemfeedback>
      </item>

      <!-- Question 4 -->
      <item ident="q4_uv_threshold" title="[OpenStax 6.1 | COR 10.1.2 | Objective 9] UV Radiation Threshold">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html"><![CDATA[<p>DNA bonds require approximately 4.0 eV to break. What is the maximum wavelength (in nm) that can cause DNA damage?</p>
<p><strong>Constants:</strong> c = 3.00 × 10⁸ m/s, h = 6.626 × 10⁻³⁴ J·s, 1 eV = 1.602 × 10⁻¹⁹ J</p>]]></mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="A">
                <material><mattext>200</mattext></material>
              </response_label>
              <response_label ident="B">
                <material><mattext>310</mattext></material>
              </response_label>
              <response_label ident="C">
                <material><mattext>400</mattext></material>
              </response_label>
              <response_label ident="D">
                <material><mattext>500</mattext></material>
              </response_label>
              <response_label ident="E">
                <material><mattext>600</mattext></material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">B</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="correct_fb"/>
          </respcondition>
        </resprocessing>
        <itemfeedback ident="correct_fb">
          <flow_mat>
            <material>
              <mattext>E = 4.0 eV × 1.602 × 10⁻¹⁹ J/eV = 6.41 × 10⁻¹⁹ J; λ = hc/E = 310 nm</mattext>
            </material>
          </flow_mat>
        </itemfeedback>
      </item>

      <!-- Question 5 -->
      <item ident="q5_spectrum_order" title="[OpenStax 6.1 | COR 10.1.1 | Objective 2] Electromagnetic Spectrum Order">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html"><![CDATA[<p>Arrange these types of electromagnetic radiation in order of INCREASING energy per photon:</p>
<p>I. Microwave<br/>
II. X-ray<br/>
III. Visible light<br/>
IV. Infrared</p>]]></mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="A">
                <material><mattext>I &lt; IV &lt; III &lt; II</mattext></material>
              </response_label>
              <response_label ident="B">
                <material><mattext>II &lt; III &lt; IV &lt; I</mattext></material>
              </response_label>
              <response_label ident="C">
                <material><mattext>IV &lt; I &lt; III &lt; II</mattext></material>
              </response_label>
              <response_label ident="D">
                <material><mattext>I &lt; III &lt; IV &lt; II</mattext></material>
              </response_label>
              <response_label ident="E">
                <material><mattext>II &lt; I &lt; IV &lt; III</mattext></material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">A</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 6 -->
      <item ident="q6_photoelectric_effect" title="[OpenStax 6.1 | COR 10.1.2 | Objective 9] Photoelectric Effect - Work Function">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html"><![CDATA[<p>The work function of potassium is 2.30 eV. Light with wavelength 400 nm strikes the potassium surface. What is the kinetic energy of ejected electrons?</p>
<p><strong>Constants:</strong> c = 3.00 × 10⁸ m/s, h = 6.626 × 10⁻³⁴ J·s, 1 eV = 1.602 × 10⁻¹⁹ J</p>]]></mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="A">
                <material><mattext>0.00 eV (no electrons ejected)</mattext></material>
              </response_label>
              <response_label ident="B">
                <material><mattext>0.80 eV</mattext></material>
              </response_label>
              <response_label ident="C">
                <material><mattext>2.30 eV</mattext></material>
              </response_label>
              <response_label ident="D">
                <material><mattext>3.10 eV</mattext></material>
              </response_label>
              <response_label ident="E">
                <material><mattext>5.40 eV</mattext></material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">B</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="correct_fb"/>
          </respcondition>
        </resprocessing>
        <itemfeedback ident="correct_fb">
          <flow_mat>
            <material>
              <mattext>E_photon = hc/λ = 3.10 eV; KE = 3.10 - 2.30 = 0.80 eV</mattext>
            </material>
          </flow_mat>
        </itemfeedback>
      </item>

      <!-- Question 7 -->
      <item ident="q7_comparative_energy" title="[OpenStax 6.1 | COR 10.1.1 | Objective 1] Comparative Photon Energy">
