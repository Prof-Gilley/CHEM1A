      <!-- Question 10 -->
      <item ident="q10_blackbody_quantization" title="[OpenStax 6.1 | COR 10.1.2 | Objective 2] Blackbody Radiation Quantization">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
