        <presentation>
          <material>
            <mattext texttype="text/html"><![CDATA[<p>A negative (exothermic) EA means:</p>]]></mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="A">
                <material><mattext>The atom does not want electrons</mattext></material>
              </response_label>
              <response_label ident="B">
                <material><mattext>Energy is required to add an electron</mattext></material>
              </response_label>
              <response_label ident="C">
                <material><mattext>Energy is released when an electron is added</mattext></material>
              </response_label>
              <response_label ident="D">
