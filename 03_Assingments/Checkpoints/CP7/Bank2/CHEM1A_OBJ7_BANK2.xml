    <section ident="bank2_section" title="Reasoning with ΔEN &amp; Partial Charges">
      
      <!-- Question 1 -->
      <item ident="bank2_q1" title="Q1: Electron Cloud Shifts (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">For the Na-Cl bond, does the electron cloud shift toward or away from sodium?</mattext>
          </material>
          <response_lid ident="response1" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">Toward sodium (Na gains electron density)</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">Away from sodium (Cl gains electron density)</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">No shift (electrons are shared equally)</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">Complete transfer (ionic bond forms)</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">B</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 2 -->
      <item ident="bank2_q2" title="Q2: Polarity Ranking (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">Rank the following molecules by &lt;b&gt;increasing polarity of their central bond&lt;/b&gt;: CF₄, CHF₃, CH₂F₂, CH₃F</mattext>
          </material>
          <response_lid ident="response2" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">CF₄ &lt; CHF₃ &lt; CH₂F₂ &lt; CH₃F</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">CH₃F &lt; CH₂F₂ &lt; CHF₃ &lt; CF₄</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">CF₄ = CHF₃ = CH₂F₂ = CH₃F (all equal)</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">CH₂F₂ &lt; CH₃F &lt; CHF₃ &lt; CF₄</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response2">C</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 3 -->
      <item ident="bank2_q3" title="Q3: Polar Bond Cancellation (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">In which pair do &lt;b&gt;polar bonds cancel&lt;/b&gt; perfectly due to symmetry?</mattext>
          </material>
          <response_lid ident="response3" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">SF₆</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">H₂O</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">PF₃</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">SO₂</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response3">A</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 4 -->
      <item ident="bank2_q4" title="Q4: HF vs HCl Boiling Points (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">Why does HF have a &lt;b&gt;higher boiling point&lt;/b&gt; than HCl even though both are polar?</mattext>
          </material>
          <response_lid ident="response4" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">HF has stronger hydrogen bonding due to F's high electronegativity</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">HCl is actually more polar than HF</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">HF has a higher molecular weight</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">HCl molecules are larger, causing weaker interactions</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response4">A</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 5 -->
      <item ident="bank2_q5" title="Q5: Bond Type and Electron Transfer (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">A bond between two atoms has ΔEN = 1.6 and one atom's oxidation state changes by +2 → -2. What combination of &lt;b&gt;bond type and electron transfer&lt;/b&gt; is most consistent?</mattext>
          </material>
          <response_lid ident="response5" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">Ionic bond with complete electron transfer</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">Polar covalent bond with partial electron transfer</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">Nonpolar covalent bond with no electron transfer</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">Metallic bond with delocalized electrons</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response5">B</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 6 -->
      <item ident="bank2_q6" title="Q6: C-O vs C-F Bond Polarity (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">The C-O bond has ΔEN = 1.0 while the C-F bond has ΔEN = 1.5. Which statement about bond polarity and partial charges is correct?</mattext>
          </material>
          <response_lid ident="response6" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">C-F is more polar; F carries a larger partial negative charge than O</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">C-O is more polar; O carries a larger partial negative charge than F</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">Both bonds have equal polarity but different bond lengths</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">C-F is less polar because F is smaller than O</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response6">A</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 7 -->
      <item ident="bank2_q7" title="Q7: Ionic Character Order (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">Arrange the following bonds in order of increasing ionic character: N-H, O-H, F-H, C-H</mattext>
          </material>
          <response_lid ident="response7" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">C-H &lt; N-H &lt; O-H &lt; F-H</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">F-H &lt; O-H &lt; N-H &lt; C-H</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">N-H &lt; C-H &lt; O-H &lt; F-H</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">C-H &lt; O-H &lt; N-H &lt; F-H</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response7">A</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 8 -->
      <item ident="bank2_q8" title="Q8: NCl₃ Partial Charges (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">In the molecule NCl₃, which atom carries the partial negative charge?</mattext>
          </material>
          <response_lid ident="response8" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">Nitrogen, because it has higher electronegativity than chlorine</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">Chlorine, because it has higher electronegativity than nitrogen</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">Neither, because the bond is nonpolar</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">Both share electrons equally</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response8">B</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 9 -->
      <item ident="bank2_q9" title="Q9: PCl₅ vs PCl₃ Polarity (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">The P-Cl bond has some polar character. Why is PCl₅ nonpolar overall while PCl₃ is polar?</mattext>
          </material>
          <response_lid ident="response9" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">PCl₅ has trigonal bipyramidal symmetry that cancels dipoles; PCl₃ has pyramidal shape with net dipole</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">PCl₅ has more chlorine atoms that make it nonpolar</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">PCl₃ has stronger P-Cl bonds than PCl₅</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">PCl₅ uses different hybridization that eliminates polarity</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response9">A</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

      <!-- Question 10 -->
      <item ident="bank2_q10" title="Q10: CO₂ vs H₂CO Polarity (Tro Ch 7.2 | COR Obj 7)">
        <itemmetadata>
          <qtimetadata>
            <qtimetadatafield>
              <fieldlabel>question_type</fieldlabel>
              <fieldentry>multiple_choice_question</fieldentry>
            </qtimetadatafield>
            <qtimetadatafield>
              <fieldlabel>points_possible</fieldlabel>
              <fieldentry>1.0</fieldentry>
            </qtimetadatafield>
          </qtimetadata>
        </itemmetadata>
        <presentation>
          <material>
            <mattext texttype="text/html">Compare the polarity of the C=O bond in CO₂ versus in H₂CO. How does molecular geometry affect the net dipole?</mattext>
          </material>
          <response_lid ident="response10" rcardinality="single">
            <render_choice>
              <response_label ident="A">
                <material>
                  <mattext texttype="text/html">CO₂ is linear so dipoles cancel; H₂CO is trigonal planar with net dipole toward oxygen</mattext>
                </material>
              </response_label>
              <response_label ident="B">
                <material>
                  <mattext texttype="text/html">Both are nonpolar due to symmetry</mattext>
                </material>
              </response_label>
              <response_label ident="C">
                <material>
                  <mattext texttype="text/html">CO₂ is polar; H₂CO is nonpolar</mattext>
                </material>
              </response_label>
              <response_label ident="D">
                <material>
                  <mattext texttype="text/html">The C=O bond polarity is different in each molecule</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="1" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response10">A</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">1</setvar>
          </respcondition>
        </resprocessing>
      </item>

